<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ManageCafeActivity"
    android:background="@color/main">

    <!-- TableLayout to create a table with three columns -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingTop="16dp"
        android:stretchColumns="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Header Row -->
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="3"
                android:gravity="center"
                android:padding="8dp"
                android:text="Cafe Name"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Data Row Example -->
        <TableRow>

            <TextView
                android:id="@+id/cafeNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="8dp"
                android:text="Cafe ABC" />

            <Button
                android:id="@+id/editDetailsButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:text="Edit Details" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:text="Delete" />
        </TableRow>

        <!-- Add more rows dynamically from code -->
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
